{
  "plugins": ["stylelint-scss", "stylelint-declaration-strict-value"],
  "extends": ["stylelint-config-standard-scss", "stylelint-config-recess-order"],
  "ignoreFiles": [
    "src/styles/libraries/*.scss",
    "src/styles/scss/constants/_colors.scss",
    "src/styles/scss/mixins/_font.scss",
    "src/styles/scss/mixins/_positions.scss",
    "src/styles/scss/_global.scss"
  ],
  "rules": {
    "at-rule-empty-line-before": null,
    "custom-property-empty-line-before": null,
    "declaration-empty-line-before": "never",
    "keyframes-name-pattern": "^[a-z][a-zA-Z0-9_]+$",
    "max-nesting-depth": 6,
    "max-line-length": 180,
    "no-descending-specificity": null,
    "no-invalid-position-at-import-rule": null,
    "number-leading-zero": "always",
    "function-name-case": null,
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": ["appearance"]
      }
    ],
    "scss/at-function-pattern": "^[a-z_](|[a-zA-Z0-9]+)$",
    "scss/at-mixin-pattern": "^[a-z_](|[a-zA-Z0-9]+)$",
    "scss/dollar-variable-empty-line-before": null,
    "scss/dollar-variable-pattern": [
      "^[A-Z0-9_]+$",
      {
        "ignore": "local"
      }
    ],
    "scss/double-slash-comment-empty-line-before": null,
    "selector-max-id": 0,
    "selector-class-pattern": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ],
    "string-quotes": "single",
    "font-family-no-missing-generic-family-keyword": null
  }
}
